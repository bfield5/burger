<div class="headerContainer">
  <img id="hamburgerImage" src="assets/img/download.png" alt="Burger image.">
  <header>Eat-Da-Burger!</header>
</div>

<div class="mainContainer">
  <section id="availableHamburgers">
    <ul id="burgerList">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="availableBurger">
            <span class="burgers">
              {{this.id}}
              {{this.burger_name}}
            </span>
            <span id="devourButton">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <div class="imgSize">
                <button class="devourButton" type="submit"><img src="assets/img/burger 5.png" alt="burger">Devour it!</button>
                </div>
              </form>
            </span>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </section>
  <section id="devouredHamburgers">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="devourBurger">
            {{this.id}}
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </section>
  <section id ="newBurger">
    <form class="createUpdateForm" action="/" method="POST">

      <div class="formGroup">
        <textarea id="newBurgerText" rows="4" name="burger_name"></textarea>
      </div>

      <button type="submit" id="newBurgerSubmit">Submit</button>
    </form>

    <p>Enter the burger you want to eat. Click the "Submit" button to add it.</p>

  </section>
</div>